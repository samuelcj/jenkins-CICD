def gv

pipeline {
    agent any
    tools {
        maven "maven-3.9.9"
    }
    stages {
        stage("init") {
            steps {
                script {
                    gv = load "./java-maven-app/script.groovy"
                }
            }
        }
        stage("build") {
            steps {
                script {
                    gv.buildApp()
                    sh "mvn package"
                }
            }
        }
        stage("test") {
            input {
                message "Select the evironment for the deployment"
                ok "Done"
                parameters {
                    choice(name: "Environment", choices: ["dev", "prod"], description: "Selecting Environment")
                }
            }
            steps {
                script {
                    echo "Deploying to ${Environment}"
                    gv.testApp()
                    withCredentials([usernamePassword(credentialsId: "DockerHub", passwordVariable: "PASSWORD", usernameVariable: "USERNAME")]){
                        sh "docker build -t samuelcj310/java-maven-app:java-maven-app_2.0 ./java-maven-app/"
                        sh "echo $PASSWORD | docker login -u $USERNAME --password-stdin"
                        sh "docker push samuelcj310/java-maven-app:java-maven-app_2.0"
                    }
                }
            }
        }
        stage("deploy") {
            steps {
                script {
                    env.ENV = input message: "Select the evironment for the deployment", ok: "Done", parameters: [choice(name: "ENV", choices: ["dev", "prod"], description: "Selecting Environment")]
                    gv.deployApp()
                    echo "The Environment has been set to ${ENV}"
                }
            }
        }
    }   
}